#!/usr/bin/env node

require("dotenv").config();
const https = require('https'); // Importa el módulo HTTPS
const http = require('http');  // Importa el módulo HTTP para redirección
const fs = require('fs');
const createServerHandler = require('../app');
const debug = require('debug')('app:server');

// Rutas de los certificados SSL
const sslOptions = {
  key: fs.readFileSync('ssl/key.pem'),  // Ruta a la clave privada
  cert: fs.readFileSync('ssl/cert.pem'),  // Ruta al certificado público
};

// Configura HTTPS
let port = normalizePort(process.env.PORT || '3000');
const server = https.createServer(sslOptions, createServerHandler());

server.listen(port, '0.0.0.0'); // Servidor HTTPS escuchando en el puerto especificado
server.on('error', onError);
server.on('listening', onListening);

// Redirige tráfico HTTP a HTTPS
http.createServer((req, res) => {
  res.writeHead(301, { Location: `https://${req.headers.host}${req.url}` }); // Redirección
  res.end();
}).listen(80, () => {
});

function normalizePort(val) {
  let port = parseInt(val, 10);
  return isNaN(port) ? val : port >= 0 ? port : false;
}

function onError(error) {
  if (error.syscall !== 'listen') throw error;

  let bind = typeof port === 'string' ? 'Pipe ' + port : 'Port ' + port;
  if (error.code === 'EACCES') {
    console.error(bind + ' requiere privilegios elevados');
    process.exit(1);
  } else if (error.code === 'EADDRINUSE') {
    console.error(bind + ' ya está en uso');
    process.exit(1);
  } else throw error;
}

function onListening() {
  let addr = server.address();
  let bind = typeof addr === 'string' ? 'pipe ' + addr : 'port ' + addr.port;
  debug('Escuchando en ' + bind);
}
